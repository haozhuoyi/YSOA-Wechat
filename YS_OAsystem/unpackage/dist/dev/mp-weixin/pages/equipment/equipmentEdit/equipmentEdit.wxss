
.view-main{
	padding: 20px 10px 0px 20px;
}
.view-transport{
	height: 50px;
	border-bottom: #f1f1f1 1px solid;
}
.view-transTitle{
	float: left;
	width: 70px;
	color: rgb(180,27,18);
}
.input-trans{
	font-weight: bold;
	margin-left: 5px;
}
.view-address{
	height: 51px;
	margin-top: 20px;
}
.view-addressSel{
	float: left;
	width: 100%;
	font-weight: bold;
}
.icons-pickers{
	float: right;
}
.view-rightAddress{
	float: left;
	height: 51px;
	width: calc(100% - 95px);
	margin-left: 15px;
}
.view-firstAddress{
	height: 40px;
}
.view-line{
	height: 3px;
